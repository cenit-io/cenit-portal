<% title = 'Sign up' %>
<%= render 'shared/page_header', title: title, home: false %>

<div id="cta">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-12">
        <div class="form-wrapper" >
          <h4>Ready to start? Create your free account now or <%= link_to 'sign in', new_user_session_path(params) %></h4>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form', class: 'form-inline'}) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %>
            </div>
              <%=
                  if (return_to = params[:return_to])
                    f.hidden_field :return_to, value: return_to
                  end
              %>
            <%= f.submit 'Sign up', :class => 'button button-small' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

