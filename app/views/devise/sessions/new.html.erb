<% title = 'Sign in' %>
<%= render 'shared/page_header', title: title, home: false %>

<div id="cta">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-12">
        <div class="form-wrapper">
          <h4>Enter in your account now or <%= link_to 'sign up', new_registration_path(resource_name, params) %> for free</h4>

          <div id='devise_sing_in_error_messages'>
            <%= devise_error_messages! %>
            <% flash.each do |key, message| %>
                <div class="notice"><%= message %></div>
            <% end %>
          </div>
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', class: 'form-inline' }) do |f| %>
              <div class="form-group">
                <%= f.email_field :email, class: 'form-control', :placeholder => 'Email' %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: 'form-control', :placeholder => 'Password' %>
              </div>
              <%=
                  if (return_to = params[:return_to])
                    f.hidden_field :return_to, value: return_to
                  end
              %>
              <%= f.submit 'Sign in', :class => 'button button-small' %>
          <% end %>
        </div>
        <div>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: 'pull-left' %>
        </div>
      </div>
    </div>
  </div>
</div>

