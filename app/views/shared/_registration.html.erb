<div id="cta">
  <br><br><br>
  <% unless current_user.present? %>
    <% resource ||= User.new %>

    <div id="sing_in_form" style='display:none;'>
      <div class="container text-center">
        <div class="row">
          <div class="col-md-12">
            <div class="form-wrapper" >
              <h4>Enter in your account now or <a id='sing_up_button' href='#sing_up' class="demo">sign up</a></h4>
              <div id='devise_sing_in_error_messages' >
                <%= devise_error_messages! %>
                <% flash.each do |key, message| %>
                  <div class="notice"><%= message %></div>
                <% end %>
              </div>
              <%= form_for resource, as: :user, url: session_path(:user), remote: true, html: { role: 'form', class: 'form-inline' } do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, class: 'form-control', :placeholder => 'Email' %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, class: 'form-control', :placeholder => 'Password' %>
                </div>
                <%= f.submit 'Submit', :class => 'button button-small' %>
                <a name='sing_in'></a>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="sing_up_form">
      <div class="container text-center">
        <div class="row">
          <div class="col-md-12">
            <div class="form-wrapper" >
              <h4>Ready to start? Create your free account now or <a id='sing_in_button' href='#sing_in' class="demo">sign in</a></h4>
              <div id='devise_sing_up_error_messages'>
                <%= devise_error_messages! %>
                <% flash.each do |key, message| %>
                  <div class="notice"><%= message %></div>
                <% end %>
              </div>
              <%= form_for resource, as: :user, url: registration_path(:user), remote: true, html: { role: 'form', class: 'form-inline' } do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %>
                </div>
                <%= f.submit 'Submit', :class => 'button button-small' %>
                <a name='sing_up'></a>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

  <% else %>

      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="form-wrapper" >
              <div class="wrapper clearfix">
                <div class="col-md-9">
                  <h4>Take time and tell us about your experience with Cenit SaaS</h4>
                </div>
                <a data-toggle="modal" class="button button-small" href="#contact_us" data-backdrop="false">
                  <span>Contact Us</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

  <% end %>
</div>

<script>
  $(document).ajaxSuccess(function(event, xhr, settings, data) {
     if (settings.url.match(/users/) && settings.type == 'POST') {
       window.location.reload();
     }
  });
  $(document).ajaxError(function(event, jqxhr, settings) {
    if (settings.url.match(/sign_in/) && settings.type == 'POST') {
      $('#devise_sing_in_error_messages').html(jqxhr.responseText);
    } else if (settings.url.match(/sign_up/) && settings.type == 'POST') {
      $('#devise_sing_up_error_messages').html(jqxhr.responseText);
    }
  });
</script>