<div id="home2">
  <div id="cta">
    <% if user_signed_in? %>
      <% if link == :hub && (cenit_app = Doorkeeper::Application.where(name: 'Cenit').first).present? %>
        <%= link_to "Data Integrator", cenithub_url(cenit_app), class: 'button button_hub' %>
      <% end %>
      <% if link == :odoo && (odoo_app = Doorkeeper::Application.where(name: 'odoo').first).present? %>
        <%= link_to "ERP & CRM", cenitodoo_url(current_user, odoo_app), class: 'button button_erp' %>
      <% end %>
    <% else %>
      <% if link == :hub && (cenit_app = Doorkeeper::Application.where(name: 'Cenit').first).present? %>
        <%= link_to "Data Integrator", new_user_registration_path, class: 'button button_hub' %>
      <% end %>
      <% if link == :odoo && (odoo_app = Doorkeeper::Application.where(name: 'odoo').first).present? %>
        <%= link_to "ERP & CRM", new_user_registration_path, class: 'button button_erp' %>
      <% end %>
    <% end %>
  </div>
</div>
