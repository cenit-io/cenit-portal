<div class="col-xs-4 col-sm-2" style='margin-bottom: 30px;'>
  <div class="section">
    <div class="pic">
      <%= link_to directory_path(item.slug) do %>
        <img src='<%= "#{ENV['S3']}#{item.slug}.png" %>', width= "102", class='img-responsive', alt='<%= item.name %>'>
        <p><%= item.name %></p>
      <% end %>
    </div>
  </div>
</div>

<% if (item_counter + 1) % 6 == 0 %>
   <div class="clearfix"></div>
<% elsif (item_counter + 1) % 3 == 0 %>
  <div class="clearfix visible-xs"></div>
<% end %>

