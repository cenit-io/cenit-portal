<% title = 'Sign up' %>
<%= render 'shared/page_header', title: title, home: false %>

<div id="cta">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-12">
        <div class="form-wrapper" >
          <h4>Ready to start? Create your free account now or <%= link_to 'sign in', new_user_session_path %></h4>
          <div id='devise_sing_up_error_messages'>
            <%= devise_error_messages! %>
            <% flash.each do |key, message| %>
              <div class="notice"><%= message %></div>
            <% end %>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form', class: 'form-inline'}) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %>
            </div>
            <%= f.submit 'Sign up', :class => 'button button-small' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

